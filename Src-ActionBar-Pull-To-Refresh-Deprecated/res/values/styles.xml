<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- pull to refresh -->
	<style name="Example.PtrHeader" parent="@android:style/Widget">
		<item name="ptrProgressBarColor">@color/global_color_accent</item>
		<item name="ptrHeaderBackground">@color/global_color_primary</item>
		<item name="ptrHeaderTitleTextAppearance">@style/TextAppearance.Example.PtrHeader</item>
		<item name="ptrPullText">@string/ptr_pull</item>
		<item name="ptrRefreshingText">@string/ptr_refreshing</item>
		<item name="ptrReleaseText">@string/ptr_release</item>
	</style>

	<!-- pull to refresh text -->
	<style name="TextAppearance.Example.PtrHeader" parent="@android:style/TextAppearance.Large">
		<item name="android:textSize">@dimen/global_text_size_title</item>
		<item name="android:textColor">@color/global_text_primary_inverse</item>
	</style>

</resources>
